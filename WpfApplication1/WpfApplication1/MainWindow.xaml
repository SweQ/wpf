            <ComboBox Name="TypePlayer" MinHeight="20" MaxHeight="30" MinWidth="80" Margin="5">
                <ComboBoxItem>Защитник</ComboBoxItem>
                <ComboBoxItem>Полузащитник</ComboBoxItem>
                <ComboBoxItem>Нападающий</ComboBoxItem>
            </ComboBox>
            <Button Name="Player1" MinHeight="40" MinWidth="50" Margin="10" Content='#1' Background="White" Click="Player_Click" ></Button> <!-- эта кнопка задаёт минимальные размеры для других кнопок данной панели-->
            <Button Name="Player2" MinHeight="{Binding ElementName=Player1 , Path=MinHeight}" MinWidth="{Binding ElementName=Player1 , Path=MinWidth}" Background="White" Margin="10" Content='#2' Click="Player_Click"/>
            <Button Name="Player3" MinHeight="{Binding ElementName=Player1 , Path=MinHeight}" MinWidth="{Binding ElementName=Player1 , Path=MinWidth}" Background="White" Margin="10" Content='#3' Click="Player_Click"/>
            <Button Name="Player4" MinHeight="{Binding ElementName=Player1 , Path=MinHeight}" MinWidth="{Binding ElementName=Player1 , Path=MinWidth}" Background="White" Margin="10" Content='#4' Click="Player_Click"/>
            <Button Name="Player5" MinHeight="{Binding ElementName=Player1 , Path=MinHeight}" MinWidth="{Binding ElementName=Player1 , Path=MinWidth}" Background="White" Margin="10" Content='#5' Click="Player_Click"/>
            <Label VerticalAlignment="Center" Margin="20,0,0,0">Тип действия:</Label>
            <Button Name="Button_Positive" MinHeight="{Binding ElementName=Player1 , Path=MinHeight}" MinWidth="{Binding ElementName=Player1 , Path=MinWidth}" Background="White" Margin="10" Content='ПОЛОЖИТЕЛЬНОЕ' Click="Show_P_TTD"></Button>
            <Button Name="Button_Negative" MinHeight="{Binding ElementName=Player1 , Path=MinHeight}" MinWidth="{Binding ElementName=Player1 , Path=MinWidth}" Background="White" Margin="10" Content='ОТРИЦАТЕЛЬНОЕ' Click="Show_M_TTD"></Button>
        </StackPanel>

