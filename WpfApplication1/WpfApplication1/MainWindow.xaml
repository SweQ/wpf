                    <MenuItem Header="Поперечная/назад" Click="MenuItem_Click"/>
                    <MenuItem Header="Вперед/диагональная" Click="MenuItem_Click"/>
                    <MenuItem Header="Длинная обостряющая передача мяча атакующему игроку" Click="MenuItem_Click"/>
