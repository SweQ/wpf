<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" MinHeight="650" MinWidth="900">
    
    <Window.Resources>
        <DataTemplate x:Key="P_TTD_Red">
            <Menu Background="Red">
            <MenuItem Header="Гол" Background="Red">
                <MenuItem Name="MenuItemWithClick" Header="Гол с 11 метров (пинальти)" Click="MenuItem_Click"/>
                    <MenuItem Header="Голевая передача" Click="MenuItem_Click"/>
                    <MenuItem Header="Явная предпоследняя передача" Click="MenuItem_Click"/>
                    <MenuItem Header="Удар-добивание+гол" Click="MenuItem_Click"/>
                    <MenuItem Header="Удар+добивание" Click="MenuItem_Click"/>
                    <MenuItem Header="ТТД приведшие к назначению пинальти" Click="MenuItem_Click"/>
            </MenuItem>
            </Menu>
        </DataTemplate>
        
        <DataTemplate x:Key="P_TTD_Yellow">
            <Menu Background="Yellow">
                <MenuItem Header="Фол" Background="Yellow">
                    <MenuItem Header="Фол соперника+желтая карточка" Click="MenuItem_Click"/>
                    <MenuItem Header="Фол соперника+красная карточка" Click="MenuItem_Click"/>
                    <MenuItem Header="Фол соперника" Click="MenuItem_Click"/>
                    <MenuItem Header="ТТД, приведшее к угловому удару" Click="MenuItem_Click"/>
                    <MenuItem Header="Острая подача мяча в штрафную площадь" Click="MenuItem_Click"/>
                </MenuItem>
            </Menu>
        </DataTemplate>
        
        <DataTemplate x:Key="P_TTD_Green">
            <Menu Background="Green">
            <MenuItem Header="Получение мяча" Background="Green">
                    <MenuItem Header="Выйгрыш верховой борьбы" Click="MenuItem_Click"/>
                    <MenuItem Header="Получение мяча" Click="MenuItem_Click"/>
            </MenuItem>
            </Menu>
        </DataTemplate>
        
        <DataTemplate x:Key="P_TTD_Blue">
            <Menu Background="Blue">
                <MenuItem Header="Отбор мяча" Background="Blue">
                    <MenuItem Header="Отбор мяча у соперника+передача" Click="MenuItem_Click"/>
                    <MenuItem Header="Отбор мяча, при этом мяч остался у соперника" Click="MenuItem_Click"/>
                    <MenuItem Header="Отбор мяча у соперника без выполнения партнеру" Click="MenuItem_Click"/>
                    <MenuItem Header="Отбор мяча у соперника после единоборства" Click="MenuItem_Click"/>
                </MenuItem>
            </Menu>
        </DataTemplate>
        
        <DataTemplate x:Key="P_TTD_Brown"> <!--для зон 1-11 -->
